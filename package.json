{
  "name": "showcase",
  "private": true,
  "description": "It's just a showcase for my thoughts",
  "version": "0.1.0",
  "author": "Alex Shulaev <alexandrshy@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "type-check": "tsc --noEmit --skipLibCheck",
    "lint:ts": "tslint \"./src/**/*.ts\" \"./src/**/*.tsx\"",
    "lint:css": "stylelint \"src/**/*.css\"",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "yarn format",
      "git add"
    ],
    "*.css": [
      "stylelint"
    ]
  },
  "dependencies": {
    "@loadable/component": "^5.11.0",
    "classnames": "^2.2.6",
    "dotenv": "^8.2.0",
    "gatsby": "^2.18.4",
    "gatsby-plugin-manifest": "^2.2.33",
    "gatsby-plugin-netlify-cms": "^4.1.33",
    "gatsby-plugin-prefetch-google-fonts": "^1.4.3",
    "gatsby-plugin-tslint": "^0.0.2",
    "gatsby-plugin-typescript": "^2.1.20",
    "gatsby-transformer-remark": "^5.25.1",
    "netlify-cms-app": "^2.9.7",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.9",
    "@types/loadable__component": "^5.10.0",
    "@types/node": "^12.12.14",
    "@types/react": "^16.9.15",
    "@types/react-dom": "^16.9.4",
    "@types/react-helmet": "^5.0.14",
    "@types/react-loadable": "^5.5.3",
    "gatsby-image": "^2.0.23",
    "gatsby-plugin-i18n": "^1.0.1",
    "gatsby-plugin-netlify": "^2.1.30",
    "gatsby-plugin-react-helmet": "^3.1.18",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-sharp": "^2.3.10",
    "gatsby-remark-copy-linked-files": "^2.1.36",
    "gatsby-remark-images": "^3.1.42",
    "gatsby-remark-prismjs": "^3.3.30",
    "gatsby-remark-relative-images": "^0.2.3",
    "gatsby-source-filesystem": "^2.1.43",
    "gatsby-transformer-sharp": "^2.3.9",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prismjs": "^1.19.0",
    "react-loadable": "^5.5.0",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.1.0",
    "typescript": "^3.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alexandrshy/showcase"
  },
  "bugs": {
    "url": "https://github.com/Alexandrshy/showcase/issues"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "declaration-colon-newline-after": null,
      "selector-pseudo-class-no-unknown": null,
      "selector-pseudo-element-colon-notation": null
    }
  }
}
